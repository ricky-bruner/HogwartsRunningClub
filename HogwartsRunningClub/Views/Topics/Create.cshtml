@model HogwartsRunningClub.Models.ViewModels.TopicViewModels.CreateTopicViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Topic.HouseExclusive" /> @Html.DisplayNameFor(model => model.Topic.HouseExclusive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Title" class="control-label"></label>
                <input asp-for="Topic.Title" class="form-control" />
                <span asp-validation-for="Topic.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Content" class="control-label"></label>
                <textarea asp-for="Topic.Content" wrap="hard" class="form-control"></textarea>
                <span asp-validation-for="Topic.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.TopicCategoryId" class="control-label"></label>
                <select asp-for="Topic.TopicCategoryId" class ="form-control" asp-items="Model.CategoryOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
