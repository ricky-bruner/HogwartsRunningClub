@model HogwartsRunningClub.Models.Topic

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TopicId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalViews" class="control-label"></label>
                <input asp-for="TotalViews" class="form-control" />
                <span asp-validation-for="TotalViews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HouseExclusive" /> @Html.DisplayNameFor(model => model.HouseExclusive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TopicCategoryId" class="control-label"></label>
                <select asp-for="TopicCategoryId" class="form-control" asp-items="ViewBag.TopicCategoryId"></select>
                <span asp-validation-for="TopicCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
