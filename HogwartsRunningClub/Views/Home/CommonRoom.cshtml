@model HogwartsRunningClub.Models.ViewModels.CommonRoomViewModel


@{
    ViewData["Title"] = "Common Room";
}
<h2>Welcome to the @Model.House.Title Common Room!</h2>

<a asp-controller="Topics" asp-action="Create" class="btn btn-sm btn-primary" asp-route-id="@Model.House.Title">Post a Topic</a>

<div class="col=md-12 row"> 
    <div class="cold-md-6">
        <h4>House Members</h4>
        @foreach (ApplicationUser user in Model.HouseMembers) 
         { 
            <div>
                <p>@user.UserName @user.MilesRun</p>
            </div>
         }
    </div>
    <div class="cold-md-6">
        <h4>House Exclusive Topics</h4>
        <div class="row">
            <button class="btn btn-sm" id="all-topics-btn">All</button>
            @for (var i = 0; i < @Model.TopicCategories.Count; i++ ) 
             {
                <button class="btn btn-sm @Model.BtnColors[i]" id="@Model.TopicCategories[i].TopicCategoryId-@Model.TopicCategories[i].Label">@Model.TopicCategories[i].Label</button>
             }
        </div>
        <div id="topic-container">
            @foreach (Topic topic in Model.Topics) 
             { 
                <h5 class="col-md-12 topic">
                    <a asp-controller="Topics" asp-action="Details" asp-route-id="@topic.TopicId" id="topic-@topic.TopicId-@topic.TopicCategoryId">@topic.Title - @topic.User.UserName</a>
                </h5>
             }
        </div>
    </div>


</div>
